{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "noImplicitReturns": false,
        "noUnusedLocals": false,
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "compileOnSave": true,
    "include": ["src"],
    "exclude": ["node_modules"]
}